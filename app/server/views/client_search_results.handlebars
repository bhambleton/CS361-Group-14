{{#if serverMessage}}
    <h1>SERVER MESSAGE</h1>
    <h2>{{serverMessage}}</h2>
{{/if}}

<!--Show the current selection, if any-->
{{#if results}}

    <div id="servicesResultsContainer">
        <div id="resultsContent">
            <h3>Results for: {{type}} in ZIP code {{zip}}:</h3>

            <ol id="resultsList">
                {{#each results}}
                <li class="resultsItem" id="{{id}}">
                    <div class="servicesInfoContainer">
                        <p class="infoLine"><span id="serviceName">{{name}}</span></p>
                        <p class="infoLine"><span id="servicePhoneNumber">{{phone}}</span></p>
                        <p class="infoLine"><span id="serviceEmail">{{email}}</span></p>
                        <p class="infoLine"><span id="serviceStreet>{{address_street}}</span></p>
                        <p class="infoLine"><span id="serviceCity">{{address_city}}, </span><span id="serviceState">{{address_state}}</span> <span id="serviceZip">{{address_zip}}</span>
                        </p>
                        <br><strong>Notes</strong><br>
                        <p class="infoLine">{{notes}}</p>
                    </div>
                </li>
                {{/each}}
            </ol>
        </div>
    </div>

    <div class="mapContainer">

    </div>
{{/if}}
